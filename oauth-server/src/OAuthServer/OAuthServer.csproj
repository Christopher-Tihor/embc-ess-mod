        <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
        <UserSecretsId>07057444-655a-49e0-9b8c-3647ebd2a19a</UserSecretsId>
    </PropertyGroup>

    <ItemGroup>
      <Content Remove="Data\test_users.json" />
    </ItemGroup>

    <ItemGroup>
      <None Include="..\.editorconfig" Link=".editorconfig" />
